{
  "name": "directory-validator",
  "version": "0.0.0-development",
  "description": "Validates directory/folder structure",
  "main": "lib/index.js",
  "bin": {
    "directory-validator": "lib/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf .nyc_output && rm -rf coverage && rm -rf lib",
    "coverage": "nyc --reporter html --reporter text npm run test",
    "coverage-coveralls": "npm run coverage && nyc report --reporter=text-lcov | coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "mocha -r source-map-support/register --compilers ts-node/register src/**/_tests/**/*.ts",
    "watch-coverage": "chokidar src --initial -c 'npm run coverage'",
    "watch-test": "chokidar src --initial -c 'npm run test'"
  },
  "author": "Erwin Gaitan O <erwingaitano@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/colors": "^1.1.3",
    "@types/commander": "^2.9.1",
    "@types/glob": "^5.0.30",
    "@types/lodash": "^4.14.68",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.10",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.4.2",
    "nyc": "^11.1.0",
    "semantic-release": "^6.3.6",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "ajv": "^5.2.2",
    "colors": "^1.1.2",
    "commander": "^2.11.0",
    "ego-node-helpers": "^1.1.0",
    "glob": "^7.1.2",
    "lodash": "^4.17.4"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "lines": 95,
    "statements": 95,
    "functions": 80,
    "branches": 90,
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/index.ts",
      "src/types.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "files": [
    "lib",
    "supportFiles",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/erwingo/directory-validator.git"
  },
  "keywords": [
    "directory",
    "validator",
    "validation",
    "folder"
  ],
  "bugs": {
    "url": "https://github.com/erwingo/directory-validator/issues"
  },
  "homepage": "https://github.com/erwingo/directory-validator#readme"
}
